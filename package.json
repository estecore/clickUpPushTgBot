{
  "name": "clickuppushbot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc",
    "commit": "git add . && cz && git push",
    "check": "git fetch && git pull && npm i",
    "getChatId": "ts-node src/getChatId.ts"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-telegram-bot-api": "^0.65.1",
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/node-telegram-bot-api": "^0.64.6",
    "@types/sqlite3": "^3.1.11",
    "commitizen": "^4.3.0",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx git-cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "main": "index.ts",
  "keywords": [],
  "author": "Estecore",
  "license": "ISC",
  "description": "telegram bot for clickup integrations and notifications"
}
